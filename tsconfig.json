{
  "compilerOptions": {
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": ".build",
    "paths": {
      "~/*": ["src/*"],
      "~integration/*": ["test/integration/*"],
      "~mock/*": ["test/mock/*"]
    },
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022"
  },
  "include": [
    "./aws/**/*.ts",
    "./src/**/*.ts",
    "./test/**/*.ts",
    "./serverless/*.ts",
    "./*.ts",
    "./tsconfig.json"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
